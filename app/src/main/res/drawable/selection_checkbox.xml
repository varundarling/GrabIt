<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected: Blue circle with white tick -->
    <item android:state_checked="true"
        android:drawable="@drawable/check_box_selected" />

    <!-- When unselected: Blue border circle only -->
    <item android:state_checked="false"
        android:drawable="@drawable/checkbox_unselected" />

    <!-- Default state -->
    <item android:drawable="@drawable/checkbox_unselected" />
</selector>
