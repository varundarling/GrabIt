<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    tools:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Selection Checkbox (LEFT SIDE - Hidden by default) -->
        <ImageView
            android:id="@+id/selectionCheckBox"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
            android:contentDescription="Select this item" />

        <!-- Item Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Item Name & Completion Badge Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textItemName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Basmati Rice Premium" />

                <TextView
                    android:id="@+id/completionBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ DONE"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/completion_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Quantity & Price Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textQuantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    tools:text="Qty: 2" />

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/price_primary"
                    android:background="@drawable/price_badge"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:minWidth="70dp"
                    android:gravity="center"
                    tools:text="₹299.00" />

            </LinearLayout>

        </LinearLayout>

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/delete_button_ripple"
            android:contentDescription="Delete item"
            android:src="@android:drawable/ic_menu_delete"
            app2:tint="@color/delete_primary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
